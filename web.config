<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="pdf scraper"
           path="*"
           verb="*"
           modules="FastCgiModule"
           scriptProcessor="C:\inetpub\wwwroot\pdf_scraper_project\env\Scripts\python.exe|C:\inetpub\wwwroot\pdf_scraper_project\env\Lib\site-packages\wfastcgi.py"
           resourceType="Unspecified" />
    </handlers>
  </system.webServer>

  <appSettings>
    <!-- Point to module and the WSGI callable inside it:  module.callable -->
    <!-- If your file is app.py and variable is app, this becomes app.app -->
    <add key="WSGI_HANDLER" value="app.app" />
    <!-- Make your project importable -->
    <add key="PYTHONPATH" value="C:\inetpub\wwwroot\pdf_scraper_project" />
    <!-- Optional: log wfastcgi output for debugging -->
    <add key="WSGI_LOG" value="C:\inetpub\wwwroot\pdf_scraper_project\wfastcgi.log" />
  </appSettings>
</configuration>
